<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <Spinner
        android:id="@+id/typ_dreva"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/typ_dreva_array"
        android:prompt="@string/typ_dreva_key" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:paddingLeft="6dip"
            android:paddingTop="1dip"
            android:text="@string/prvy_field"
            android:textSize="13sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/prvy_field_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:gravity="left"
            android:inputType="numberDecimal"
            android:lines="1"
            android:paddingTop="1dip"
            android:textStyle="normal" />
    </TableRow>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dip"
        android:layout_marginLeft="6dip"
        android:layout_marginRight="6dip"
        android:onClick="onCalculateClicked"
        android:text="@string/calculate_volume" />

</LinearLayout>