<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#eee9e9"
                android:endColor="#cdc9c9"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#bebebe" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#8b8b83"
                android:startColor="#cdcdc1"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#bebebe" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#dcdcdc"
                android:startColor="#eee9e9"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#bebebe" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>