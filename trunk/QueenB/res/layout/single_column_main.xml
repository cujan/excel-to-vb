<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:layout_centerHorizontal="true"
    android:background="#f4f60c" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#f4f60c"
        android:orientation="vertical" >
        
        
        <TextView
            android:id="@+id/title_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="18dip"
            android:paddingRight="18dip"
            android:paddingTop="18dip"
            android:text="@string/app_name"
            android:textSize="22sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/novy_chov"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dip"
            android:layout_marginBottom="8dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:background="@drawable/button_custom"
            android:onClick="onVytvorNovyChov"
            android:text="@string/novy_chov" />

        <Button
            android:id="@+id/zoznam_chovov"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:background="@drawable/button_custom"
            android:onClick="onZoznamChovov"
            android:text="@string/zoznam_chovov" />

        <Button
            android:id="@+id/o_programe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:background="@drawable/button_custom"
            android:onClick="onOPrograme"
            android:text="@string/o_programe" />        
        
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dip"
            android:layout_marginTop="20dip"
            android:src="@drawable/bee_resized" />
        
        <TextView
            android:id="@+id/contact"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="8dip"
            android:paddingRight="8dip"
            android:layout_gravity="bottom"
            android:paddingTop="18dip"
            android:textSize="12sp"
            android:textStyle="bold" />
                
    </LinearLayout>

